{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Policy Runtime v0.3.x Policy",
  "type": "object",
  "required": ["allowlist"],
  "properties": {
    "allowlist": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["chainId", "to", "selector"],
        "properties": {
          "chainId": { "type": "integer", "minimum": 1 },
          "to": { "type": "string", "pattern": "^0x[0-9a-f]{40}$" },
          "selector": { "type": "string", "pattern": "^0x[0-9a-f]{8}$" }
        },
        "additionalProperties": false
      }
    },
    "caps": {
      "type": "object",
      "properties": {
        "max_outflow_h1": {
          "oneOf": [
            { "type": "string", "pattern": "^[0-9]+$" },
            {
              "type": "object",
              "patternProperties": {
                ".*": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" }
              },
              "additionalProperties": false
            }
          ]
        },
        "max_outflow_d1": {
          "oneOf": [
            { "type": "string", "pattern": "^[0-9]+$" },
            {
              "type": "object",
              "patternProperties": {
                ".*": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" }
              },
              "additionalProperties": false
            }
          ]
        },
        "max_per_function_h1": { "type": "integer", "minimum": 1 },
        "per_target": {
          "type": "object",
          "properties": {
            "h1": {
              "type": "object",
              "patternProperties": {
                "^0x[0-9a-f]{40}(\\|0x[0-9a-f]{8})?$": {
                  "oneOf": [
                    { "type": "string", "pattern": "^[0-9]+$" },
                    {
                      "type": "object",
                      "patternProperties": {
                        ".*": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" }
                      },
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "additionalProperties": false
            },
            "d1": {
              "type": "object",
              "patternProperties": {
                "^0x[0-9a-f]{40}(\\|0x[0-9a-f]{8})?$": {
                  "oneOf": [
                    { "type": "string", "pattern": "^[0-9]+$" },
                    {
                      "type": "object",
                      "patternProperties": {
                        ".*": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?$" }
                      },
                      "additionalProperties": false
                    }
                  ]
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "pause": { "type": "boolean" },
    "meta": {
      "type": "object",
      "properties": {
        "schemaVersion": { "type": "string" },
        "denominations": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "decimals": { "type": "integer", "minimum": 0 },
                "chainId": { "type": "integer", "minimum": 1 },
                "address": { "type": "string", "pattern": "^0x[0-9a-f]{40}$" }
              },
              "required": ["decimals"],
              "additionalProperties": true
            }
          }
        },
        "defaultDenomination": { "type": "string" },
        "nonce_max_gap": { "type": "integer", "minimum": 0 },
        "slippage_max_bps": { "type": "integer", "minimum": 0, "maximum": 10000 }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
