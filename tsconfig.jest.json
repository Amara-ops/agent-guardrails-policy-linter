{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "verbatimModuleSyntax": false,
    "strict": true
  },
  "include": ["src/**/*"]
}